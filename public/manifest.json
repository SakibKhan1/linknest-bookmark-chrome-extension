{
  "manifest_version": 3,
  "name": "LinkNest - Bookmark Manager",
  "short_name": "LinkNest",
  "version": "1.0",
  "description": "A smarter way to save and tag your bookmarks.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "bookmarks",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icon128.png"],
      "matches": ["<all_urls>"]
    }
  ]
}

